{
  "name": "super_dev_playground",
  "version": "1.0.0",
  "description": "A powerful desktop development environment",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.7",
    "electron": "^28.2.0",
    "node-pty": "^1.0.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0",
    "xterm-addon-search": "^0.13.0",
    "@codemirror/state": "^6.4.0",
    "@codemirror/view": "^6.23.0",
    "@codemirror/language": "^6.10.0",
    "@codemirror/lang-javascript": "^6.2.1",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lang-html": "^6.4.7",
    "@codemirror/lang-css": "^6.2.1",
    "@codemirror/theme-one-dark": "^6.1.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron-builder": "^24.12.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5"
  },
  "build": {
    "appId": "com.superdevplayground.app",
    "productName": "Super Dev Playground",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "src/renderer/assets/icons/app_icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/renderer/assets/icons/app_icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/renderer/assets/icons/app_icon.png"
    },
    "protocols": {
      "name": "superdevplayground",
      "schemes": ["superdevplayground"]
    }
  }
